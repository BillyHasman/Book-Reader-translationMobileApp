{
  "expo": {
    "name": "Book Reader",
    "slug": "book-reader-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app-logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/app-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/app-logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET"
      ],
      "package": "com.anonymous.bookreaderapp"
    },
    "web": {
      "favicon": "./assets/app-logo.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "extraMavenRepos": ["https://www.jitpack.io"]
          }
        }
      ],
      "expo-document-picker",
      "expo-file-system"
    ],
    "extra": {
      "eas": {
        "projectId": "074404c5-b96e-4b0f-96b3-12e24ac21e9d"
      }
    }
  }
}
